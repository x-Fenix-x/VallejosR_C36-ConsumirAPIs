<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: "Películas recomendadas" }) %>

    <body>
        <%- include('partials/header') %>

            <div class="col-12 col-md-10 mx-auto mt-3">
                <div class="card">
                    <div class="card-header">
                        <nav class="d-flex justify-content-between" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/movies">Películas</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Recomendadas
                                </li>
                            </ol>
                            <div>

                            </div>
                        </nav>
                    </div>

                    <div class="card-body">
                        <ul>
                            <% for( let i=0; i < movies.length; i++ ) { %>
                                <li class="mb-2">
                                    <a href="/movies/detail/<%=movies[i].id%>">
                                        <%= movies[i].title %>
                                    </a> <br>
                                    <%= 'RATING: ' + movies[i].rating %>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                </div>
            </div>
    </body>

</html>